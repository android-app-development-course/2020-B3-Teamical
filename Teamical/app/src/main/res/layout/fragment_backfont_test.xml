<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/mScro"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="70dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/addAUser"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="8sp"
                android:text="新建一个用户"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/dellAUser"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="8sp"
                android:text="删除一个用户"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/updateAUser"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="8sp"
                android:text="修改一个用户手机号码"
                android:textSize="20sp" />


            <TextView
                android:id="@+id/searchAUser"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="8sp"
                android:text="查询一个用户"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/addATeam"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="28sp"
                android:text="添加一个团队"
                android:textSize="20sp" />


            <TextView
                android:id="@+id/searchTeam"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="8sp"
                android:text="查询团队"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/addTeammate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="8sp"
                android:text="添加团队成员"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/addAMessage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="8sp"
                android:text="添加一条消息"
                android:textSize="20sp" />


        </LinearLayout>
    </ScrollView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>